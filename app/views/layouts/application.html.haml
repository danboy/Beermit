!!!
%html
  %head
    %title Beermit
    <!-- Source File -->
    <meta name="viewport" content="user-scalable=no, width=device-width" />
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.2.0/build/cssreset/reset-min.css">
    = stylesheet_link_tag "phone", :media => "only screen and (max-width: 480px)"
    = stylesheet_link_tag "screen", :media => "screen and (min-width: 481px)"
    = csrf_meta_tag
  %body
    #canvas
      = yield
    = javascript_include_tag 'libs/jquery-1.4.4.min.js', 'libs/raphael-min.js', 'libs/jqtouch.min.js', 'script.js'
    = yield :scripts
    = yield :onready
    :javascript
      $.jQTouch({
        icon: 'jqtouch.png',
        statusBar: 'black-translucent',
        fullscreen: true,
        preloadImages: [
        'themes/jqt/img/chevron_white.png',
        'themes/jqt/img/bg_row_select.gif',
        'themes/jqt/img/back_button_clicked.png',
        'themes/jqt/img/button_clicked.png'
        ]
      });
